import sys
input = sys.stdin.readline

N = int(input())
meetings = []
for _ in range(N):
    s, e = map(int, input().split())
    meetings.append((s, e))

# (끝나는 시간, 시작 시간) 순으로 정렬
# 같은 끝나는 시간을 가진 회의는 시작 시간이 빠른 순으로 정렬
meetings.sort(key=lambda x: (x[1], x[0]))

count = 0
last_end = 0
for s, e in meetings:
    if s >= last_end:
        count += 1
        last_end = e

sys.stdout.write(str(count))